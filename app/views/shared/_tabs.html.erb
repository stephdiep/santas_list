<div class="top-tabs d-flex justify-content-center mt-3">
  <ul class="nav nav-tabs custom-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Tous</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Filles</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Gars</a>
    </li>
  </ul>
</div>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active mt-3" id="home" role="tabpanel" aria-labelledby="home-tab">
    <div class="row d-flex justify-content-center align-items-center">
      <% @users.each do |user| %>
        <%= render partial: "shared/user_card", locals: { user: user } %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <div class="row d-flex justify-content-center align-items-center">
      <% @girl_users.each do |user| %>
        <%= render partial: "shared/user_card", locals: { user: user } %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    <div class="row d-flex justify-content-center align-items-center">
      <% @boy_users.each do |user| %>
        <%= render partial: "shared/user_card", locals: { user: user } %>
      <% end %>
    </div>
  </div>
</div>