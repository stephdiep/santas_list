<% @users.each do |user| %>
  <div class="col-sm-12 col-md-5 santa-card shadow m-3 d-flex">
    <%= image_tag user.avatar, class: "card-avatar" %>
    <div class="user-info">
      <h3><%= user.name.capitalize %></h3>

      <!--Age-->
      <p>Ã‚ge : 
      <% age = Date.today.year - user.birthday.year %>
      <% if age <= 2 %>
        <% age_in_months = (Date.today.year * 12 + Date.today.month) - (user.birthday.year * 12 + user.birthday.month) %>
        <%= age_in_months %> mois
      <% else %>
        <% age -= 1 if Date.today < user.birthday + age.years %>
        <%= age %> ans
      <% end %>
      </p>

      <!--Wishes-->
      <p>
        <% if @wishes.find_by(user: user) == nil %>
        <!-- When migration done, need to find where position == 1>
          <% @wishes.where(user: user).each do |wish| %>
            <%= wish.name.downcase %>
          <% end %>-->
          <%= user.name.capitalize %> n'a malheureusement encore aucun voeu...
        <% else %>
          Son plus grand voeu serait de recevoir un
          <strong><%= @wishes.find_by(user: user).name.downcase %></strong>.
        <% end %>
      </p>

      <!-- More info -->
      <%= link_to 'En savoir plus', user_path(user), class: 'btn btn-santa'%>
    </div>

  </div>
<%end %>